{
        "order": 0,
        "index_patterns": [
                "log-ciscolog-*"
        ],
        "settings": {
                "index": {
                        "refresh_interval": "5s",
                        "unassigned": {
                                "node_left": {
                                        "delayed_timeout": "10m"
                                }
                        },
                        "number_of_shards": "3",
                        "number_of_replicas": "0",
                        "merge": {
                                "scheduler": {
                                        "max_thread_count": "1"
                                }
                        }
                }
        },
        "mappings": {
                "dynamic_templates": [
                        {
                                "string_fields": {
                                        "mapping": {
                                                "norms": false,
                                                "type": "keyword"
                                        },
                                        "match_mapping_type": "string",
                                        "match": "*"
                                }
                        }
                ],
                "properties": {
                        "@timestamp": {
                                "type": "date"
                        },
                        "host": {
                                "properties": {
                                        "ip": {
                                                "type": "ip"
                                        }
                                }
                        },
                        "log_date": {
                                "type": "date"
                        },
                        "message": {
                                "type": "text"
                        },
                        "severity_level": {
                                "type": "integer"
                        }
                }
        }
}